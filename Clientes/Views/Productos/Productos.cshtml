@model IEnumerable<Clientes.ViewModels.ProductoVM>
@{
    ViewData["Title"] = "Productos";
}

<div class="container mt-4">
    <h2 class="text-center text-success mb-4">
        <i class="bi bi-basket-fill"></i> Catálogo de Productos
    </h2>

    <table class="table table-bordered table-striped table-hover shadow-sm">
        <thead class="table-success text-center">
            <tr>
                <th><i class="bi bi-upc-scan"></i> ID</th>
                <th><i class="bi bi-box"></i> Nombre</th>
                <th><i class="bi bi-card-text"></i> Descripción</th>
                <th><i class="bi bi-cash-stack"></i> Precio</th>
                <th><i class="bi bi-archive"></i> Existencia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td class="text-success fw-bold">$@item.Precio.ToString("0.00")</td>
                    <td class="text-center">@item.Existencia</td>
                </tr>
            }
        </tbody>
    </table>


    <!-- Botón de regreso -->
    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success px-4 shadow-sm">
            <i class="bi bi-arrow-left-circle"></i> Regresar al Inicio
        </a>
    </div>

</div>
